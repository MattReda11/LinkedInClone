@model LinkedInClone.Models.Post

@{
    ViewData["Title"] = "Delete";
}
<div class="universal-container">

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostedDate)
        </dd>
        @if (Model.FileName != null)
        {
            <dt class="col-sm-2">
                Image/Video
            </dt>
            <dd class="col-sm-10">
                <img src='@Url.Action("GetMediaFile","Posts", new {fileName = Model.FileName})' />
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Home" asp-action="Index" class="ml-1 u u-RL">Back to List</a>
    </form>
</div>

</div>