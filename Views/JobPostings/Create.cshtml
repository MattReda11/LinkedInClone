@model LinkedInClone.Models.JobPosting

@{
ViewData["Title"] = "Create";
}

<div class="universal-container">
    <div class="row level">
        <form asp-action="Create">

            <h1 class="header-brand">
                Create Job Posting
            </h1>

            <div class="divider"></div>
            <div class="divider"></div>

            <div class="row level">

                <div class="col-xs-3 level-item">
                    <label asp-for="JobTitle" class="m-0"></label>
                </div>

                <div class="col-xs-9 level-item mb-1">
                    <input asp-for="JobTitle" type="text" maxlength="200" />
                </div>

                <div class="col-xs-3 level-item">
                    <label asp-for="Description" class="m-0"></label>
                </div>

                <div class="col-xs-9 level-item">
                    <textarea type="text" asp-for="Description" class="hover-grow" maxlength="1000" cols="30"
                        rows="10"></textarea>
                </div>
                
            </div>

            <div class="row level">
                <input type="submit" value="Create"
                    class="ml-auto btn-animated outline animated bounceIn btn-dark btn--lg mr-1" />
            </div>

            <div class="divider"></div>
            <div asp-validation-summary="All" class="text-danger font-semibold"></div>
            <div class="divider"></div>

        </form>
    </div>
    <div>
        <a asp-action="RecruiterJobPostings" class="ml-1 u u-RL">Back to List</a>
    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}