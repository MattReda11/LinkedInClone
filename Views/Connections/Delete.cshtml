@model LinkedInClone.Models.Connection

@{
ViewData["Title"] = "Delete";
}
<div class="card p-4 w-50p u-center u-flex u-flex-column">
    <h3>Are you sure you want to remove this Friend?</h3>
    <div>
        <hr />

        @if (Model.AccountOwner.UserName == User.Identity.Name)
        {
        <p><b>Friend: </b> &nbsp; @Html.DisplayFor(model => model.Friend.FullName)</p>
        }
        else if (Model.Friend.UserName == User.Identity.Name)
        {
        <p><b>Friend: </b> &nbsp; @Html.DisplayFor(model => model.AccountOwner.FullName)</p>
        }
        <p><b>Friend's Since: </b> &nbsp; @Html.DisplayFor(model => model.CreatedDate)</p>


        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>