<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobLink</title>
    <link rel="stylesheet" href="../css/cirrus.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/cirrus-ui">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LinkedInClone.styles.css" asp-append-version="true" />
</head>

<body>
    <partial name="_LoginPartial" />
    @if(TempData["generalInfo"] != null)
    {
    <div id="generalInfoMessage" class="toast toast--info">
        <p>@TempData["generalInfo"]</p>
    </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top custom-footer container">
        <b>© @DateTime.Now.Year - JobLink</b>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/5a30c849af.js" crossorigin="anonymous"></script>
    <script>
        setTimeout(function(){$('#generalInfoMessage').fadeOut('fast');}, 3000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>