@model List<Post>
<h4>Manage User Posts</h4>
<table class="table" id="postsTable">
    <th>ID</th>
   
   <th>Author ID</th>
   <th>Content</th>
   <th>Created Date</th>
   <th>File Name</th>
    <th>Actions</th>
  
   
    <tbody>
@foreach (var item in Model){
<tr>
  @{
        var shorterId = item.Author.Id.Substring(0,13);
        var shortContent = item.Content.Substring(0,25);
        
    }
    <td>@item.Id </td>
    <td>@shorterId</td>
    <td>@shortContent</td>
    <td>@item.PostedDate</td>
    <td>@item.FileName</td>    
    <td><a href="#" onclick="confirmDelete('@item.Id')">Delete</a></td>
   
</tr>
}
</tbody>
</table>

<script>
    function deleteUser(id) {
        var xhr = new XMLHttpRequest();
        xhr.open("DELETE", "/Account/DeleteUser/" + id);
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.onload = function() {
            if (xhr.status === 200) {
                alert("User deleted successfully");
                location.reload();
            } else {
                alert("Error deleting user");
            }
        };
        xhr.send();
    }

    function confirmDelete(id) {
    if (confirm("Are you sure you want to delete this user?")) {
        $.ajax({
            type: "DELETE",
            url: "/Account/DeleteUser/" + id,
            success: function(data) {                
                alert("User deleted successfully");
                location.reload();
            }
        });
    }
}
</script>
