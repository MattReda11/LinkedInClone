                                <div>
                                    <a href="#logoutModalDialog" class="utb utb-C" data-toggle="modal" data-target="#logoutModalDialog">Log Out</a>
                                </div>
                                
                            </div>
                        </div>

                        }
                        else
                        {

                        <div class="nav-right">
                            <div class="nav-item active">

                                <div class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Index">Home</a>
                                </div>

                                <div class="nav-item">
                                    <a class="nav-link text-dark" id="register" asp-area="Identity"
                                        asp-page="/Account/Register">Register</a>
                                </div>

                                <div class="nav-item">
                                    <a class="nav-link text-dark" id="login" asp-area="Identity"
                                        asp-page="/Account/Login">Log
                                        In</a>
                                </div>

                            </div>
                        </div>
                        }
                    </div>
                </nav>
            </div>
        </header>