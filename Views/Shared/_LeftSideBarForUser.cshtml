@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using LinkedInClone.Models
@using LinkedInClone.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject AppDbContext _db

<div class="main-left">
    <div class="card p-4">
        <div class="card__container">
            <h6>Explore</h6>

            <div class="tree">
                <div class="tree-item">
                    <input type="checkbox" id="tree" class="u-none">
                    <label class="tree-item-header" for="tree">
                        <span class="icon">
                            <i class="fa fa-wrapper fa-chevron-right small" aria-hidden="true"></i>
                        </span> Posts
                    </label>
                    <div class="tree-item-body">
                        <ul class="menu">
                            <li class="menu-item"><a asp-controller="Posts" asp-action="Create">Add a Post</a></li>
                            <li class="menu-item"><a asp-controller="Posts" asp-action="MyPosts">Your Posts</a></li>
                            <li class="menu-item"><a asp-controller="Posts" asp-action="Create">Liked Posts</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="tree">
                <div class="tree-item">
                    <input type="checkbox" id="tree2" class="u-none">
                    <label class="tree-item-header" for="tree2">
                        <span class="icon">
                            <i class="fa fa-wrapper fa-chevron-right small" aria-hidden="true"></i>
                        </span> Jobs
                    </label>
                    <div class="tree-item-body">
                        <ul class="menu">
                            <li class="menu-item"><a asp-controller="JobApplications"
                                    asp-action="AllAvailableJobs">Apply
                                    for
                                    Jobs</a></li>
                            <li class="menu-item"><a asp-controller="JobApplications" asp-action="UserApplications">View
                                    My
                                    Jobs</a>
                            </li>
                            <li class="menu-item"><a asp-controller="JobApplications" asp-action="TODO">Contact a
                                    recruiter</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="tree">
                <div class="tree-item">
                    <input type="checkbox" id="tree3" class="u-none">
                    <label class="tree-item-header" for="tree3">
                        <span class="icon">
                            <i class="fa fa-wrapper fa-chevron-right small" aria-hidden="true"></i>
                        </span> Network
                    </label>
                    <div class="tree-item-body">
                        <ul class="menu">
                            <li class="menu-item"><a asp-controller="Connections" asp-action="Index">My Connections</a>
                            </li>
                            <li class="menu-item"><a asp-controller="Messages" asp-action="Conversations">Messaging</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="tree">
                <div class="tree-item">
                    <input type="checkbox" id="tree4" class="u-none">
                    <label class="tree-item-header" for="tree4">
                        <span class="icon">
                            <i class="fa fa-wrapper fa-chevron-right small" aria-hidden="true"></i>
                        </span> Account
                    </label>
                    <div class="tree-item-body">
                        <ul class="menu">
                            <li class="menu-item"><a asp-controller="Home" asp-action="MyAccount">Account Details</a>
                            </li>

                            <li class="menu-item"><a asp-area="Identity" asp-page="/Account/Logout"
                                    asp-route-returnUrl="@Url.Action("Index", "Home" , new { area="" })">Log Out</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>